	  {{/if}}
    <form action="/admin/login" method="post">
      <div class="mb-3">
        <label for="usuario" class="form-label usuario-title">Usuario</label>
        <input type="text" class="form-control login-usuario" id="usuario" name="usuario" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label contrasenia-title">Contrase√±a</label>
        <input
          type="password"
          class="form-control login-contrasenia"
          id="password"
          name="password"
        />
      </div>
      <div class="btn-ingresar">
        <button type="submit" class="btn btn-primary">Ingresar</button>
      </div>
    </form>
  </div>
</div>
